        // green area
        <span class="p">&lt;</span><span class="nt">div</span> <span class="nt">data</span><span class="err">-</span><span class="na">qa=</span><span class="s2">"title"</span> <span class="na">className=</span><span class="si">{</span><span class="nx">bemBlocks</span><span class="p">.</span><span class="nx">item</span><span class="p">(</span><span class="s2">"title"</span><span class="p">)</span><span class="si">}</span> <span class="na">dangerouslySetInnerHTML=</span><span class="si">{</span><span class="p">{</span><span class="na">__html</span><span class="p">:</span><span class="nx">source</span><span class="p">.</span><span class="nx">title</span><span class="p">}</span><span class="si">}</span><span class="p">&gt;</span>
